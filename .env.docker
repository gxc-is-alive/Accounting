# Docker 部署环境变量配置
# Feature: data-export-docker
# 使用方法: 复制此文件为 .env 并修改配置值

# ==================== 数据库配置 ====================
# MySQL root 密码（首次启动时设置）
DB_ROOT_PASSWORD=your_root_password_here

# 应用数据库名称
DB_NAME=family_accounting

# 应用数据库用户
DB_USER=accounting

# 应用数据库密码
DB_PASSWORD=your_db_password_here

# 数据库端口（可选，默认 3306）
DB_PORT=3306

# ==================== 后端配置 ====================
# JWT 密钥（生产环境请使用强密钥）
JWT_SECRET=your_jwt_secret_key_change_in_production

# JWT 过期时间
JWT_EXPIRES_IN=7d

# 后端端口（可选，默认 3000）
BACKEND_PORT=3000

# ==================== AI 配置 ====================
# DeepSeek API Key（可选，用于 AI 功能）
DEEPSEEK_API_KEY=your_deepseek_api_key

# DeepSeek API 地址
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ==================== 前端配置 ====================
# 前端端口（可选，默认 80）
FRONTEND_PORT=80
